{
  "description": "opti-gsd workflow automation and analytics",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/workflow-router.js\" \"${CLAUDE_PLUGIN_ROOT}\" || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/log-tool-usage.js\" || true"
          }
        ]
      }
    ]
  }
}
